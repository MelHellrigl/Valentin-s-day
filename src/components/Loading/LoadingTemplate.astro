---
import background from '../../assets/background.svg';
import Loading from './organisms/Loading.astro';
---
<main>
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <Loading />
</main>

<style>
    	main {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
        animation: finish 5s ease-in forwards;
	}
    #background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}
    @keyframes finish {
     100% {
        opacity: 0;
    }
}
</style>

<script>
    setTimeout(() => {
        window.location.href = '/love';
    }, 5500);
</script>;